name: Setup Node & pnpm v9
description: "Setup Node.js + pnpm v9 via Corepack și (opțional) pnpm install"
inputs:
  node_version:
    description: "Node.js version"
    required: false
    default: "20"
  pnpm_version:
    description: "pnpm version"
    required: false
    default: "9.15.4"
  install:
    description: "Rulează pnpm install"
    required: false
    default: "true"
  lockfile:
    description: "Calea către pnpm-lock.yaml pentru cache"
    required: false
    default: "pnpm-lock.yaml"

runs:
  using: "composite"
  steps:
    - name: Setup Node.js
      uses: actions/setup-node@v4
      with:
        node-version: ${{ inputs.node_version }}
        cache: pnpm
        cache-dependency-path: ${{ inputs.lockfile }}

    - name: Enable Corepack & activate pnpm
      shell: bash
      run: |
        corepack enable
        corepack prepare pnpm@${{ inputs.pnpm_version }} --activate
        echo "pnpm: $(pnpm -v)"
        echo "node: $(node -v)"

    - name: Install dependencies
      if: ${{ inputs.install == 'true' }}
      shell: bash
      run: pnpm install --no-frozen-lockfile
